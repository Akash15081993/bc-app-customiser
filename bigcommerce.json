{
  "name": "Custom Product App",
  "auth_redirect": "https://bc-app-customiser.vercel.app/api/auth/callback",
  "load": {
    "url": "https://bc-app-customiser.vercel.app/"
  },
  "uninstall": {
    "url": "https://bc-app-customiser.vercel.app/api/uninstall"
  },
  "settings": {
    "url": "https://bc-app-customiser.vercel.app/settings"
  },
  "billing": {
    "type": "recurring",
    "plans": [
      {
        "name": "Pro Plan",
        "price": 499.0,
        "interval": "month",
        "currency": "USD"
      }
    ]
  },
  "webhooks": [
    {
      "events": [
        "store/app/subscription/created",
        "store/app/subscription/updated",
        "store/app/subscription/deleted"
      ],
      "destination": "https://bc-app-customiser.vercel.app/api/webhooks/billing",
      "is_active": true
    }
  ],
  "extensions": [],
  "scopes": [
    "store_v2_products",
    "store_v2_customers",
    "store_v2_orders",
    "store_v2_content",
    "store_v2_information",
    "store_v2_marketing",
    "store_v2_checkouts",
    "store_v2_settings"
  ]
}
